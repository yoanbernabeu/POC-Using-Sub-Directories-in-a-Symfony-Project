{% extends 'base.html.twig' %}

{% block title %}Front index{% endblock %}

{% block body %}
    <h1>Front index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Front</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for front in fronts %}
            <tr>
                <td>{{ front.id }}</td>
                <td>{{ front.front }}</td>
                <td>
                    <a href="{{ path('front_front_show', {'id': front.id}) }}">show</a>
                    <a href="{{ path('front_front_edit', {'id': front.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('front_front_new') }}">Create new</a>
{% endblock %}
